

{% block body %}
<title>{% block title %}La liste des produits {% endblock %}</title> 

  {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('styles/base.css')}}"> 
        {% endblock %}


{% for product in products %}

  <div class="container-border">
    <div class="row">
      <div class="col-md-4">
        <div class="card mb-4 box-shadow">
            <div class="card-body" aligh="center">
                <p class="font-weight-bold"align="center">N° : {{ product.id }} </p>
                 <p class="font-weight-bold" align="center">Nom : {{ product.name }}</p>
                 <p class="font-weight-bold" align="center">Prix : {{ product.price }} €</p>
                 <img src="#" alt="" height="250" width="250" align="center">
                  <p class="card-text" align="center">type : {{ product.type }}</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <button type="button" class="btn btn-sm btn-outline-secondary">More details</button> 
                       <a role="button" href ="#" class="btn btn-outline-dark">Buy</a>
                      </div> 
                  </div>
            </div>
         </div>
    </div>
</div>
</div>



{% endfor %}

{% endblock %}
 