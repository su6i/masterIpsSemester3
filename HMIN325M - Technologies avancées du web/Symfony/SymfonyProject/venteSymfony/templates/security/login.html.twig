{% extends "base.html.twig" %}

{% block body %}
	<h1>Login:</h1>
        <form action="{{ path('security_login') }}" method="post">
            <div class="btn-toolbar">
                <div class="form-group">
                    <input placeholder="E-mail" required name="_username" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <input placeholder="Password" required name="_password" type="password" class="form-control">
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success">Login</button>
                </div>
                <div class="form-group">
                    <a class="btn btn-success btn-md" href="{{ path('security_inscription') }}" role="button">SignUP</a>
                </div>
            </div>
        </form>


{% endblock %}
