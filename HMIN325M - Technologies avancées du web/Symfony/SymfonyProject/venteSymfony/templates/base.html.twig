<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>


		<link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css"> {% block stylesheets %}{% endblock %}
        {# <link rel="stylesheet" href="assets/css/base.css"> #}

	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
			<img src="{{ asset('assets/image/symfony.png') }}" width="50" height="50">
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="navbarColor02">
				<ul class="navbar-nav mr-auto">

					<li class="nav-item">
						<a class="nav-link" href="{{ path('home')}}">Home</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{ path('blog')}}">Products</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{ path('blog_findCategory')}}">Brands</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{ path('blog_findType')}}">Types</a>
					</li>
					{% if app.user %}

						<li class="nav-item">
							<a class="nav-link" href="{{ path('panier')}}">Cart</a>
						</li>




                            {% if app.user.roles[0]=='ROLE_ADMIN' %}
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('blog_ajout')}}">Add</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('admin_user')}}">Users</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('blog_ajout')}}">Add Product</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('blog_ajout_category')}}">Add Category</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('blog_ajout_type')}}">Add Type</a>
                                </li>
                            {% endif %}
                        
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('profile')}}" style="color:white;font-weight: bold;border: 2px; border-color: #92a8d1;border-style: solid;">{{ app.user.email }}</a>
                            </li>
                        {% endif %}
                    </ul>


				<ul class="navbar-nav ml-auto">
					<form class="form-inline my-2 my-lg-0">
						<input class="form-control mr-sm-2" type="text" placeholder="Search">
						<button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
					</form>
					{% if not app.user %}
						<li class="nav-item">
							<a class="nav-link" href="{{ path('security_login')}}">Login</a>
						</li>
					{% else %}
						<li class="nav-item">
							<a class="nav-link" href="{{ path('security_logout')}}">Logout</a>
						</li>
					{% endif %}
				</ul>
			</div>
		</nav>
		<div class="container"> {% block body %}{% endblock %}
			</div>
			{% block javascripts %}{% endblock %}
		</body>
	</html>
